<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        tools:context=".MainActivity">

    <com.ast.dev.library.CircleIconView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:iconDrawable="@android:drawable/ic_menu_camera"
        app:backgroundFillColor="@android:color/holo_orange_light"
        app:borderColor="@color/colorPrimaryDark"
        app:iconColor="#0A32CD"
        app:borderRatio=".10"/>

    <com.ast.dev.library.CircleIconView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:iconDrawable="@android:drawable/ic_btn_speak_now"
        app:backgroundFillColor="@android:color/holo_blue_bright"
        app:borderColor="@android:color/holo_blue_dark"
        app:iconColor="#0A32CD"
        app:iconRatio="0.60"
        app:borderRatio=".15"/>

    <com.ast.dev.library.CircleIconView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:iconDrawable="@android:drawable/ic_dialog_alert"
        app:backgroundFillColor="@android:color/holo_blue_bright"
        app:borderColor="@android:color/holo_blue_dark"
        app:iconColor="@android:color/holo_red_dark"
        app:iconRatio="1"
        app:borderRatio="0"/>

    <com.ast.dev.library.CircleIconView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:iconDrawable="@android:drawable/ic_dialog_alert"
        app:backgroundFillColor="@android:color/holo_blue_bright"
        app:borderColor="@android:color/holo_blue_dark"
        app:iconColor="@android:color/holo_red_dark"
        app:iconRatio="1"
        app:clipToBorder="false"
        app:borderRatio="0"/>

</LinearLayout>